# Editor configuration, see https://editorconfig.org
root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true
# this is intentionally different from Prettier's printWidth!
# read https://prettier.io/docs/en/options.html#print-width for more info
max_line_length = 120

[*.ts]
quote_type = single

[*.md]
max_line_length = off
trim_trailing_whitespace = false
